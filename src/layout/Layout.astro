---
import Header from "../components/Header.astro";
import "@fontsource-variable/sora";
import Prefooter from "../components/Prefooter.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
const { title } = Astro.props;
const { currentLocale } = Astro;
---

<html lang={currentLocale}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta title={title} />
    <script src="../../node_modules/flowbite/dist/flowbite.min.js" defer
    ></script>
    <script src="../components/service/script.js" defer></script>
  </head>
  <body>
    <Header />
    <slot />
    <Prefooter />
    <Footer />
    <style is:global>
      * {
        font-family: "Sora Variable", sans-serif;
        color-scheme: dark;
      }
      body {
        background-color: #0d1436;
      }
      h1 {
        font-weight: bold;
        transform: uppercase;
      }
      p {
        font-size: 1.125rem /* 18px */;
        line-height: 1.75rem /* 28px */;
      }
      section {
        width: 100% !important;
      }

      a {
        box-shadow: inset 0 0 20px rgba(255, 255, 255, 0);
        outline-color: rgba(255, 255, 255, 0.5);
        outline-offset: 0px;
        text-shadow: none;
        transition: all 1250ms cubic-bezier(0.19, 1, 0.22, 1);
      }
      .content:hover {
        box-shadow: 0 0 10px rgba(255, 255, 255, 1);
      }
      a:hover {
        text-shadow: rgba(255, 255, 255, 1) 0px 0px 30px;
      }
      a:focus {
        text-decoration: dashed white;
      }
    </style>
  </body>
</html>
